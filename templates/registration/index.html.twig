{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Registrierung{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('/style/stylingLoginRegisterPages.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('style/stylingLandingPageAndNavbar.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('style/stylingChoiceBoxSpecial.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="form-div-outer" id="form-div-outer-register">
        <div class="headline-form-register">
            Registrierung
            <div id="line-register"></div>
        </div>
        <form class="form-inner" method="post">
            {{ form_start(regform) }}
            <div class="username">
                <label class="username-label" for="inputUsername">Benutzername</label>
                <div class="inputUsername">
                    {{ form_widget(regform.username, {'attr': {'class': 'inputUsername', 'onfocus': 'setBlueBorder("line-usr")'}}) }}
                    {{ form_errors(regform.username) }}
                </div>
                <div id="line-usr">
                </div>
            </div>

            <div class="password">
                <label class="password-label" for="inputPassword">Passwort</label>
                <div class="inputPassword">
                    {{ form_widget(regform.password.first, {'attr': {'class': 'inputPassword', 'onfocus': 'setBlueBorder("line-pw")'}}) }}
                    {{ form_errors(regform.password.first) }}
                </div>
                <div id="line-pw">
                </div>
            </div>

            <div class="password">
                <label class="password-label" for="inputPasswordRepeat">Passwort wiederholen</label>

                {{ form_widget(regform.password.second, {'attr': {'class': 'inputPassword', 'onfocus': 'setBlueBorder("line-pw-repeat")'}}) }}
                    {{ form_errors(regform.password.second) }}
                <div class="line" id="line-password-repeat"></div>
                <div id="line-pw-repeat">
                </div>
            </div>
            <div class="role">
                <label class="username-label" id="labelrole" for="inputRole">Rolle</label>
                <div class="inputRole">
                    {{ form_widget(regform.roles, {'attr': {'class': 'inputRole', 'onfocus': 'setBlueBorder("line-role")'}}) }}
                    {{ form_errors(regform.roles) }}
                </div>
            </div>

            <div class="register-btn-submit">
                <button class="submit-btn" type="submit">
                    Registrieren
                </button>
            </div>
            {{ form_end(regform) }}
        </form>
    </div>
{% endblock %}
