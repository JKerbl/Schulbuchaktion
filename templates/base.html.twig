    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="{{ asset('js/burgerMenu.js') }}"></script>
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            function setBlueBorder(elementId) {
                let elementFocus = document.getElementById(elementId);
                let elementNotFocus;
                let elementNotFocus2;

                if (elementId === 'line-usr') {
                    elementNotFocus = document.getElementById('line-pw');
                    elementNotFocus2 = document.getElementById('line-pw-repeat');
                } else if (elementId === 'line-pw') {
                    elementNotFocus = document.getElementById('line-usr');
                    elementNotFocus2 = document.getElementById('line-pw-repeat');
                } else if (elementId === 'line-pw-repeat') {
                    elementNotFocus = document.getElementById('line-usr');
                    elementNotFocus2 = document.getElementById('line-pw');
                }
                elementFocus.classList.add('line-blue');
                elementNotFocus.classList.remove('line-blue');
                elementNotFocus2.classList.remove('line-blue');
            }
        </script>
    {% endblock %}
</head>
